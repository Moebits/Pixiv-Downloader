{
  "name": "pixiv-downloader",
  "version": "0.0.1",
  "description": "An app that downloads images/ugoira from Pixiv",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run clean && webpack && cross-env DEVELOPMENT=true electron dist/main.js",
    "clean": "del-cli ./dist",
    "release": "npm run clean ./build && webpack && electron-builder -p always"
  },
  "keywords": [
    "pixiv",
    "downloader",
    "ugoira",
    "anime",
    "cute"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tenpi/Pixiv-Downloader"
  },
  "build": {
    "appId": "com.tenpi.pixivdl",
    "productName": "Pixiv Downloader",
    "icon": "./assets/icon.png",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Pixiv Downloader",
      "createDesktopShortcut": "always",
      "installerSidebar": "./assets/installer.bmp",
      "uninstallerSidebar": "./assets/installer.bmp"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "repo": "Pixiv-Downloader",
      "owner": "Tenpi",
      "releaseType": "draft"
    }
  },
  "author": "Tenpi",
  "license": "MIT",
  "devDependencies": {
    "@tenpi/tslint": "^1.1.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/unzipper": "^0.10.4",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "del-cli": "^3.0.1",
    "electron": "^15.3.0",
    "electron-builder": "^22.9.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.1",
    "less": "^4.1.0",
    "less-loader": "^7.3.0",
    "mini-css-extract-plugin": "^1.3.5",
    "node-loader": "^1.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "electron-store": "^7.0.1",
    "electron-updater": "^4.3.5",
    "image-size": "^0.5.5",
    "pixiv.ts": "^0.4.5",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-reorder": "^3.0.0-alpha.7",
    "shade-blend-color": "^1.0.0",
    "unzipper": "^0.10.11"
  }
}
